{
  "name": "atomic-spinner",
  "version": "0.0.0",
  "description": "Customizable React loading spinner that looks like an atom",
  "author": "David Lounsbrough",
  "license": "MIT",
  "repository": "Codenough-LLC/atomic-spinner",
  "main": "dist/index",
  "typings": "dist/index",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "webpack --mode=production",
    "publish-npm": "pnpm clean && pnpm build && npm publish",
    "build-demo": "pnpm --prefix demo build",
    "deploy-demo": "pnpm build-demo && gh-pages -d demo/build",
    "test": "pnpm cypress run --component",
    "test:interactive": "pnpm cypress open"
  },
  "keywords": [
    "atomic",
    "atom",
    "chemistry",
    "loader",
    "loading",
    "spinner",
    "npm",
    "package",
    "react",
    "typescript"
  ],
  "files": [
    "dist"
  ],
  "dependencies": {
    "prop-types": "^15.8.1"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/prop-types": "^15.7.5",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/webpack": "^5.28.0",
    "compression-webpack-plugin": "^10.0.0",
    "cypress": "^12.3.0",
    "gh-pages": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}